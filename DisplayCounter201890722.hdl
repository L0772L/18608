CHIP DisplayCounter201890722 {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    // 将 Counter 的输出连接到 CHIP 的顶层 out
    Counter(inc=inc, reset=reset, out=outBus);

    // 只从 outBus（合法顶层连接）取位
    And(a=outBus[3], b=true, out=A);
    And(a=outBus[2], b=true, out=B);
    And(a=outBus[1], b=true, out=C);
    And(a=outBus[0], b=true, out=D);

    // 调用你的七段译码器
    Decoder201890722(
        A=A, B=B, C=C, D=D,
        a=a, b=b, c=c, d=d, e=e, f=f, g=g
    );
}
