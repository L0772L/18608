CHIP DisplayCounter201890722 {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    // 16-bit internal counter
    Inc16(in=curr, out=incOut);
    Mux16(a=curr, b=incOut, sel=inc, out=incOrNot);
    Mux16(a=incOrNot, b=false, sel=reset, out=in);
    Register(in=in, out=curr, load=true);

    // 4-bit binary to 7-segment decoder
    Decoder201890722(
        A=curr[3], B=curr[2], C=curr[1], D=curr[0],
        a=a, b=b, c=c, d=d, e=e, f=f, g=g
    );
}
