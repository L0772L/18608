CHIP DisplayCounter201890722 {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    // 正确调用 Counter：用 inc 和 reset 作为输入
    Counter(inc=inc, reset=reset, out=counterOut);

    // 将低 4 位接入 Decoder201890722
    Decoder201890722(
        A=counterOut[3], B=counterOut[2],
        C=counterOut[1], D=counterOut[0],
        a=a, b=b, c=c, d=d, e=e, f=f, g=g
    );
}
