CHIP DisplayCounter201890722 {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    // 从 Counter 获取 16 位输出
    Counter(in=inc, reset=reset, out=counterOut);

    // 将低4位传给 7 段显示译码器
    Decoder201890722(
        A=counterOut[3], B=counterOut[2],
        C=counterOut[1], D=counterOut[0],
        a=a, b=b, c=c, d=d, e=e, f=f, g=g
    );
}

