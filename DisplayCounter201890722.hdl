CHIP DisplayCounter201890722 {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    // 连接 16位计数器，只取低4位
    Counter(in=inc, reset=reset, out=counterOut);

    // 使用你的7段译码器
    Decoder201890722(
        A=counterOut[3], 
        B=counterOut[2], 
        C=counterOut[1], 
        D=counterOut[0], 
        a=a, b=b, c=c, d=d, e=e, f=f, g=g
    );
}
