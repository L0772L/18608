CHIP Counter {
    IN inc, reset;
    OUT A, B, C, D;

    PARTS:
    Register(in=next, out=current, load=true);
    Inc16(in=current, out=plusOne);
    Mux16(a=current, b=plusOne, sel=inc, out=maybeInc);
    Mux16(a=maybeInc, b=false, sel=reset, out=next);

    // 单独提取低4位
    And(a=current[3], b=true, out=A);
    And(a=current[2], b=true, out=B);
    And(a=current[1], b=true, out=C);
    And(a=current[0], b=true, out=D);
}

