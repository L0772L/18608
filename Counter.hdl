CHIP Counter {
    IN inc, reset;
    OUT A, B, C, D;

    PARTS:
    Register(in=next, out=out, load=true);
    Inc16(in=out, out=incOut);
    Mux16(a=out, b=incOut, sel=inc, out=incd);
    Mux16(a=incd, b=false, sel=reset, out=next);

    And(a=out[3], b=true, out=A);
    And(a=out[2], b=true, out=B);
    And(a=out[1], b=true, out=C);
    And(a=out[0], b=true, out=D);
}
