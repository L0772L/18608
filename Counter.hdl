CHIP Counter {
    IN inc, reset;
    OUT A, B, C, D;

    PARTS:
    // A, B, C 始终为 0
    Or(a=false, b=false, out=A);
    Or(a=false, b=false, out=B);
    Or(a=false, b=false, out=C);

    // Bit 存储最低位 D
    Bit(in=dIn, out=D, load=ld);

    // D xor inc -> temp
    Xor(a=D, b=inc, out=dxor);

    // Mux 选择：reset 为 1 输出 0，否则输出 dxor
    Mux(a=dxor, b=false, sel=reset, out=dIn);

    // load 控制：当 inc 或 reset 为 1 时，load = 1
    Or(a=inc, b=reset, out=ld);
}

