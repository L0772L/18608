CHIP Counter {
    IN inc, reset;
    OUT A, B, C, D;

    PARTS:
    // 固定输出 0 的高位 A~C
    And(a=false, b=true, out=A);
    And(a=false, b=true, out=B);
    And(a=false, b=true, out=C);

    // 用 Bit 存储 D 位（最低位）
    Bit(in=nextD, out=D, load=loadD);

    // 自增逻辑：D xor inc
    Xor(a=D, b=inc, out=dxor);

    // reset 时置 0，否则保持 dxor
    Mux(a=dxor, b=false, sel=reset, out=nextD);

    // 始终加载（或者你可以用 inc | reset 来控制）
    Or(a=inc, b=reset, out=loadD);
}
